# Identity
SITE_ID=home_lab

# MQTT
MQTT_HOST=broker.example.com
MQTT_PORT=8883
MQTT_TLS=true
MQTT_USERNAME=edge_pi_01
MQTT_PASSWORD=replace-me
MQTT_CA=/run/secrets/mqtt_ca.crt
MQTT_CERT=/run/secrets/mqtt_client.crt
MQTT_KEY=/run/secrets/mqtt_client.key
MQTT_KEEPALIVE=60
MQTT_CLEAN_SESSION=false

# openHAB
OH_BASE_URL=http://host.docker.internal:8080
OH_TOKEN=your-openhab-token
OH_TIMEOUT_SEC=10

# Intervals
TELEMETRY_INTERVAL_SEC=60
HEARTBEAT_INTERVAL_SEC=30

# Idempotency
CACHE_TTL_SEC=300
CACHE_SIZE=1000
